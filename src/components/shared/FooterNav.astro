---
export interface Props {
  title: string;
  navItems: {
    text: string;
    href: string;
  }[];
}

const { title, navItems } = Astro.props;
---

<nav class="space-y-6">
  <h2 class="capitalze font-semibold text-heading-1 text-xl">
    {title}
  </h2>
  <ul class="space-y-3 font-medium md:text-lg text-heading-3">
    {
      navItems.map((navItem) => (
        <li>
          <a href={navItem.href} class="transition hover:text-primary-400">
            {navItem.text}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
